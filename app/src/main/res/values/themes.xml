<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelTrux" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TravelTrux" parent="Base.Theme.TravelTrux" />

    <style name="ButtonSignIn" parent="android:Widget.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_sign_in</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="backgroundTint">@color/theme_color</item>
        <item name="android:background">@drawable/button_register</item>
    </style>

    <style name="EditTextSignIn" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_sign_in</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.TravelTrux.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TravelTrux.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelTrux.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextNavDrawer" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatioBarStarts" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/theme_color</item>
        <item name="android:background">@drawable/rating_background</item>
    </style>
</resources>